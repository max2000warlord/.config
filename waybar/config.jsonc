{
  "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "margin-top": 0,
  "height": 35,
  "width": 1920,
  "spacing": 4,
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": [
    "mpd",
    "idle_inhibitor",
    "pulseaudio",
    "cpu",
    "memory",
    "temperature",
    "backlight",
    "custom/protonmail",
    //"keyboard-state",
    "battery",
    "tray"
